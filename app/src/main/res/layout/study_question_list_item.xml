<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:minHeight="115dp"
    android:id="@+id/aObject"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="105dp"
        android:layout_height="115dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/loading"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="科目："
            android:gravity="center"
            android:textColor="#070404"
            android:paddingTop="5dp"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/question_subject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="C语言"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="#333333"
            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="问题描述："
            android:gravity="center_vertical"
            android:textColor="#010000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="函数指针和指针函数的区别"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="15sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="悬赏:￥"
                android:textColor="#f32525"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/question_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.0"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="#f32525"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/question_is_solve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="未解决"
                android:gravity="center_vertical"
                android:textColor="#999999"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="回答人数:"
                android:textColor="#999999"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/question_answer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="#999999"
                android:textSize="15sp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


